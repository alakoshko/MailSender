                                                    <TextBlock Text="{Binding Email}"/>
                                                </InlineUIContainer></TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <Button ToolTip="Добавить отправителя">
                                <fa:ImageAwesome Height="16" Icon="PlusCircle" Foreground="LightSeaGreen"/>
                            </Button>
                            <Button ToolTip="Удалить отправителя">
                                <fa:ImageAwesome Height="16" Icon="Remove" Foreground="OrangeRed"/>
                            </Button>
                            <Button ToolTip="Редактировать">
                                <fa:ImageAwesome Height="16" Icon="Edit" Foreground="YellowGreen"/>
                            </Button>-->
                        </ToolBar>
                        <ToolBar Band="0" BandIndex="1">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock Text="Theme: " Margin="5,0,0,0" />
                                <ComboBox x:Name="themes" Width="150" Height="20" SelectionChanged="themes_SelectionChanged" SelectedIndex="17" IsEditable="True" />
                            </StackPanel>
                        </ToolBar>
                        <ToolBar Band="1" BandIndex="0">
                            <is:ItemsCollectionControl x:Name="cbSmtpServers" VerticalAlignment="Center" HorizontalAlignment="Left" PanelName="SMTP сервера:" 
                                ItemSource="{x:Static ms:SmtpServers.Servers}"/>
                            <TextBlock DockPanel.Dock="Left" Text="Логин: " Margin="5,0,0,0" VerticalAlignment="Center"/>
                            <TextBox DockPanel.Dock="Left" x:Name="tbSmtpServerLogin" Width="100" />
                            <TextBlock DockPanel.Dock="Left" Text="Пароль: " VerticalAlignment="Center"/>
                            <PasswordBox DockPanel.Dock="Left" x:Name="pbSmtpServerPass" Width="100" />


                            <!--<empV:SmtpServersView />-->
                            
                            
                            <!--<TextBlock Text="Серверы" VerticalAlignment="Center" Margin="0,0,3,0"/>
                            <ComboBox x:Name="cbSmtpServers" Width="150" SelectedIndex="0" ItemsSource="{x:Static ms:SmtpServers.Servers}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate DataType="spam:SmtpServer">
                                        <StackPanel>
                                            <TextBlock><InlineUIContainer>
                                                    <TextBlock Text="{Binding ServerName}"/>
