                                <fa:ImageAwesome Height="16" Icon="Remove" Foreground="OrangeRed"/>
                            </Button>
                            <Button ToolTip="Редактировать список">
                                <fa:ImageAwesome Height="16" Icon="Edit" Foreground="YellowGreen"/>
                            </Button>-->
                        </ToolBar>
                        <ToolBar Band="0" BandIndex="1">
                            <Button Click="GoToPlannerButton_OnClick">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Height="16" Icon="CalendarOutline" Foreground="DarkBlue"/>
                                    <TextBlock Text="Перейти к планировщику"/>
                                </StackPanel>
                            </Button>
                        </ToolBar>
                        <!--<ToolBar Band="2">
                            <TextBlock VerticalAlignment="Center" Text="Список адресов"/>
                            <ComboBox x:Name="cbRecivers" Width="150" SelectedIndex="0" >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate DataType="spam:Receiver">
                                        <StackPanel>
                                            <TextBlock>
                                                <TextBlock Text="{Binding Name}"/>
                                                <TextBlock Text="{Binding Email}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button ToolTip="Добавить адрес">
                                <fa:ImageAwesome Height="16" Icon="PlusCircle" Foreground="LightSeaGreen"/>
                            </Button>
                            <Button ToolTip="Удалить адрес">
                                <fa:ImageAwesome Height="16" Icon="Remove" Foreground="OrangeRed"/>
                            </Button>
                            <Button ToolTip="Редактировать список">
                                <fa:ImageAwesome Height="16" Icon="Edit" Foreground="YellowGreen"/>
                            </Button>
                        </ToolBar>-->
                    </ToolBarTray>
                    
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <GroupBox Grid.Row="1" Grid.Column="0" Header="Группы">
                            <empV:EmployesDBView/>
                        </GroupBox>
                        <empV:EmployesEditView Grid.Column="1"/>
                        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Left" 
                                      Width="3" Foreground="Transparent"/>
                    </Grid>
                    
                </Grid>
            </TabItem>
            <TabItem Header="Планировщик" x:Name="TimePlannerTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Дата"/>
                        <Calendar SelectionMode="MultipleRange"/>
                        <TextBlock Text="Время"/>
                        <xctk:TimePicker/>
                        <Button Content="Запланировать"/>
                        <Button Content="Отправить немедленно" Click="Button_Click"/>
                        
                    </StackPanel>
                    <GroupBox Grid.Column="1" Header="Список расписания">
                        <ItemsControl/>
                    </GroupBox>

                </Grid>
            </TabItem>
            <TabItem Header="Редактор писем">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="Письма">
                        <ListBox/>
                    </GroupBox>
                    <GroupBox Grid.Column="1" Header="Письмо">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <GroupBox Grid.Row="0" >
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="46"/>
                                        <RowDefinition Height="5*"/>
                                    </Grid.RowDefinitions>
                                    <GroupBox Grid.Row="0" Header="Тема письма">
                                        <TextBox x:Name="tbMailSubject" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Тема ..." VerticalAlignment="Top" Margin="0,0,-2,0" Width="599"  />
                                    </GroupBox>
                                    <GroupBox Grid.Row="1" Header="Текст письма">
                                        <RichTextBox x:Name="rtbMailBody" />
                                    </GroupBox>
                                </Grid>
                            </GroupBox>
                            <GroupBox Grid.Row="1" Header="Комментарий">
                                <TextBox x:Name="Description"/>
                            </GroupBox>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
